<Window x:Class="DictionaryApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="200" Width="252">
    <Canvas>
        <StackPanel Canvas.Left="20" Canvas.Top="20">
            <TextBlock Text="Username:"/>
            <TextBox x:Name="txtUsername" Margin="0,0" Width="200"/>
            <TextBlock Text="Password:" Margin="0,0,0,0"/>
            <PasswordBox x:Name="txtPassword" Margin="0,5"/>
            <Button Content="Login" Click="BtnLogin_Click" Margin="0,10,0,0"/>
            <TextBlock x:Name="txtMessage" TextWrapping="Wrap" Margin="0,10"/>
        </StackPanel>
    </Canvas>
</Window>
