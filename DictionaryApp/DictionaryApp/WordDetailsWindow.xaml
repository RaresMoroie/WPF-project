<Window x:Class="DictionaryApp.WordDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Word Details" Height="Auto" Width="400" MaxHeight="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Category:" FontWeight="Bold" Margin="10"/>
        <TextBlock x:Name="categoryTextBlock" Grid.Row="0" Margin="100,10,10,5"/>

        <TextBlock Text="Word:" FontWeight="Bold" Margin="10" Grid.Row="1"/>
        <TextBlock x:Name="wordTextBlock" Grid.Row="1" Margin="100,10,10,5"/>

        <TextBlock Text="Definition:" FontWeight="Bold" Margin="10" Grid.Row="2" TextWrapping="Wrap" Width="380"/>
        <TextBlock x:Name="definitionTextBlock" Grid.Row="2" Margin="100,10,10,5" TextWrapping="Wrap"/>

        <Image x:Name="wordImage" Grid.Row="3" Margin="10" Stretch="Uniform" Width="200" Height="150"/>
    </Grid>
</Window>
